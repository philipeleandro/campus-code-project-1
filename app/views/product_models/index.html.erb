<h1>Modelos de Produtos</h1>
<%= link_to 'Cadastrar novo modelo de produto', new_product_model_path %>

<% if @product_models.any?%>
  <% @product_models.each do |product| %>
    <div>
      <h2><%= product.name %></h2>
      <dl>
        <dt><strong>SKU:</strong></dt>
        <dd><%= product.sku %></dd>
        <dt><strong>Fornecedor</strong>:</dt>
        <dd><%= product.supplier.brand_name %></dd>
      </dl>
    </div>
  <% end %>
<% else %>
  <p>Não há modelo de produto cadastrado</p>
<% end %>